{
    "compilerOptions": {
        "target": "es2024",
        "module": "commonjs",
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./build",
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "types": ["jest"],
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "build"]
}
