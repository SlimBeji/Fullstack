                        "name"
                    ]
                },
                "id": {
                    "description": "The user ID, 24 characters",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "683b21134e2e5d46978daf1f"
                    ]
                },
                "name": {
                    "description": "The user name, two characters at least",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "eq:Slim Beji"
                    ]
                },
                "page": {
                    "type": "integer",
                    "default": 1
                },
                "size": {
                    "type": "integer",
                    "default": 100
                },
                "sort": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "createdAt"
                    ]
                }
            }
        },
        "schemas.UserPut": {
